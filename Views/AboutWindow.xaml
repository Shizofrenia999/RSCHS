<Window x:Class="RSCHS.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе" Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="МЧС РОССИИ" 
                      FontSize="24" FontWeight="Bold" 
                      Foreground="#FF3333"
                      HorizontalAlignment="Center"/>

            <TextBlock Text="Система оперативного управления" 
                      FontSize="16" Margin="0,20,0,0"
                      HorizontalAlignment="Center"/>

            <Separator Margin="0,20,0,20"/>

            <TextBlock Text="Курсовой проект" FontWeight="Bold"/>
            <TextBlock Text="Тема: 'Разработка мобильного приложения для сотрудников МЧС'" 
                      Margin="0,5,0,10"/>

            <TextBlock Text="Исполнитель:" FontWeight="Bold"/>
            <TextBlock Text="Макеев Артём Константинович" 
                      Margin="0,5,0,10"/>

            <TextBlock Text="Группа:" FontWeight="Bold"/>
            <TextBlock Text="4пк1" Margin="0,5,0,10"/>

            <TextBlock Text="Преподаватель:" FontWeight="Bold"/>
            <TextBlock Text="Егурнова Елена Николаевна" Margin="0,5,0,20"/>

            <TextBlock Text="Технологии:" FontWeight="Bold"/>
            <TextBlock Text="• .NET WPF" Margin="10,5,0,0"/>
            <TextBlock Text="• Microsoft SQL Server" Margin="10,2,0,0"/>
            <TextBlock Text="• Паттерн MVVM" Margin="10,2,0,0"/>
            <TextBlock Text="• Паттерн Command" Margin="10,2,0,10"/>

            <Button Content="Закрыть" Width="100" Height="30" 
                   HorizontalAlignment="Center" Margin="0,20,0,0"
                   Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>