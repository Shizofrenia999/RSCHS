<Window x:Class="RSCHS.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSCHS.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="МЧС РОССИИ" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Label Content="Логин:"/>
            <TextBox x:Name="txtLogin" Height="25"/>
            <Label Content="Пароль:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword" Height="25"/>
            <Button x:Name="btnLogin" Content="Войти" Click="BtnLogin_Click" Background="#FF3333" Foreground="White" FontWeight="Bold" Height="30"/>
            <Button x:Name="btnRegister" Content="Регистрация" Click="BtnRegister_Click" Margin="0,10,0,0" Height="25"/>
            <TextBlock x:Name="txtError" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0" Visibility="Collapsed"/>

        </StackPanel>
    </Grid>
</Window>