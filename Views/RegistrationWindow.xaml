<Window x:Class="RSCHS.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSCHS.Views"
        mc:Ignorable="d"
        Title="Регистрация нового сотрудника" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border Background="White" Margin="20">
        <StackPanel>
            <TextBlock Text="Регистрация сотрудника" 
                      FontSize="20" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин:" FontWeight="Bold"/>
            <TextBox x:Name="txtLogin" Margin="0,5,0,10" Height="25"/>

            <TextBlock Text="Пароль:" FontWeight="Bold"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,10" Height="25"/>

            <TextBlock Text="ФИО:" FontWeight="Bold"/>
            <TextBox x:Name="txtFullName" Margin="0,5,0,10" Height="25"/>

            <TextBlock Text="Должность:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbPosition" Margin="0,5,0,10" Height="25">
                <ComboBoxItem Content="Диспетчер"/>
                <ComboBoxItem Content="Пожарный"/>
                <ComboBoxItem Content="Спасатель"/>
                <ComboBoxItem Content="Медик"/>
                <ComboBoxItem Content="Водитель"/>
            </ComboBox>

            <TextBlock Text="Телефон:" FontWeight="Bold"/>
            <TextBox x:Name="txtPhone" Margin="0,5,0,20" Height="25" PreviewTextInput="txtPhone_PreviewTextInput"/>

            <Button x:Name="btnRegister" Content="Зарегистрировать" 
                   Click="BtnRegister_Click" 
                   Background="#FF3333" Foreground="White" 
                   FontWeight="Bold" Height="30"/>

            <Button x:Name="btnCancel" Content="Отмена" 
                   Click="BtnCancel_Click" 
                   Margin="0,10,0,0" Height="25"/>
        </StackPanel>
    </Border>
</Window>