<Window x:Class="RSCHS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSCHS"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="МЧС РОССИИ" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Label Content="Логин:"/>
            <TextBox x:Name="txtLogin" Height="25"/>
            <Label Content="Пароль:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword" Height="25"/>
            <Button x:Name="btnLogin" Content="Войти" Height="30" Margin="0,20,0,0" Click="BtnLogin_Click" Background="#FFD700"/>
            <TextBlock x:Name="txtError" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
